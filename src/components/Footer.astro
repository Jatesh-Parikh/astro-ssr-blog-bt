---
import { getCollection } from "astro:content";
import type { CollectionEntry } from "astro:content";
import { capitalize } from "../utils";

const allBlogArticles: CollectionEntry<'blog'>[] = await getCollection('blog');

const tags: string[] = allBlogArticles.flatMap((article: any) => article.data.tags);

const uniqueTags: string[] = [...new Set(tags)];
---

<footer class="bg-indigo-900 text-white pb-8">
  <div class="container mx-auto mt-10 max-w-screen-xl px-8">
    <div class="grid grid-cols-1 gap-12 sm:grid-cols-2 lg:grid-cols-3 justify-evenly justify-items-center">
      <div class="mt-10">
        <h3 class="text-xl font-semibold mb-4">About</h3>
        <p class="text-white text-sm">
          TechPeople is a blog for tech enthusiasts. We publish articles,
          stories and tutorials about the latest technology trends and
          advancements.
        </p>
      </div>
      <div class="mt-10">
        <h3 class="text-xl font-semibold mb-4">Categories</h3>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-10">
            <ul class="text-white text-sm">
                {uniqueTags.slice(0, 7).map(tag => (
                <li class="mb-2">
                    <a href={'/articles/tag/' + tag}>#{capitalize(tag)}</a>  
                </li>
                ))}
            </ul>
            <ul class="text-white text-sm">
                {uniqueTags.slice(7).map(tag => (
                <li class="mb-2">
                    <a href={'/articles/tag/' + tag}>#{capitalize(tag)}</a>  
                </li>
                ))}
            </ul>
        </div>
      </div>
      <div class="mt-10">
        <h3 class="text-xl font-semibold mb-4">Contact</h3>
        <ul class="text-white text-sm">
          <li class="mb-2">
            <a href="#">Email</a>
          </li>
          <li class="mb-2">
            <a href="#">Twitter</a>
          </li>
          <li class="mb-2">
            <a href="#">Facebook</a>
          </li>
          <li class="mb-2">
            <a href="#">Instagram</a>
          </li>
        </ul>
</footer>